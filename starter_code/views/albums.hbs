{{#if albums}}
<div class="container artists-container content-container">
    {{#each albums}}
    <div class="artists-card">
        <img class="title-img"src="{{this.images.[0].url}}" alt="image">
        <h1 class="title">{{ this.name }}</h1>
        <a class="cta-button" href="/tracks/{{this.id}}" role="button">View tracks</a>
    </div>
    {{/each}}
</div>
{{/if}}